<Page
    x:Class="ExpanderViewMaster.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ExpanderViewMaster"
    xmlns:ExpaControl="using:ExpanderViewMaster.ExpaControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <ExpaControl:ExpanderControl HorizontalAlignment="Center" 
                                     VerticalAlignment="Top" 
                                     Width="300"
                                     IsExpanded="True"
                                     Header="This is the expander header!!!"
                                     NonExpandableHeader="This is the non-expandable header"
                                     Expander="This is the expander body">
            <ListViewItem Content="First Item"/>
            <ListViewItem Content="Second Item"/>
            <ListViewItem Content="Third Item"/>
        </ExpaControl:ExpanderControl>

    </Grid>
</Page>
